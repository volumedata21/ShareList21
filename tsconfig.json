{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",       // ONLY look at the frontend source folder
    "types.ts"   // AND the shared types file
  ],
  "exclude": [
    "node_modules", 
    "dist", 
    "dist-server",
    "server.ts", // Explicitly ignore backend
    "client.ts", // Explicitly ignore backend
    "scanner.ts" // Explicitly ignore backend
  ]
}